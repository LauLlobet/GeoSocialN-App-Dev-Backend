<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="org.hibernate.events.jpa" transaction-type="RESOURCE_LOCAL">
        <class>com.tubtale.otbackend.Tree</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.spatial.dialect.postgis.PostgisDialect"/>

            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <!--property name="hibernate.connection.url" value="jdbc:postgresql://127.0.0.1:5432/ourtree?ssl=true&amp;sslfactory=org.postgresql.ssl.NonValidatingFactory"/-->
            <property name="hibernate.connection.url" value="jdbc:postgresql://52.88.128.158:5432/ourtree?ssl=true&amp;sslfactory=org.postgresql.ssl.NonValidatingFactory"/>
            <property name="hibernate.connection.username" value="ourtree"/>
            <property name="hibernate.connection.password" value="ourtree"/>
            <property name="hibernate.connection.pool_size" value="5"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="hibernate.max_fetch_depth" value="5"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>
</persistence>